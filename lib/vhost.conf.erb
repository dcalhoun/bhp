#  !!
#  Edit it in your wordpress-capistrano repo, commit and push it,
#  then run cap apache:configure to update it on the server.
<VirtualHost *:80>
  ServerName <%= domain %>
  <% server_aliases_array.each do |a| %>
    ServerAlias <%= "#{a}" %>
  <% end %>
  DocumentRoot <%= "#{current_path}" %>

  <Directory <%= "#{current_path}" %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>

  RewriteEngine On
  
  # Prevent access to .svn directories
  RewriteRule ^(.*/)?\.svn/ - [F,L]
  ErrorDocument 403 "Access Forbidden"

 </VirtualHost>